<%-include('header')-%>

<div id="ProductSection-product-template" class="product-template__container prstyle1 container">
    <!--product-single-->
    <div  class="product-single">
        <div class="row">
            <div class="col-lg-6 col-md-6 col-sm-12 col-12">
                <div class="product-details-img" style="width: 400px; height: 400px;" >
                    <div class="product-thumb">
                        <div id="gallery" class="product-dec-slider-2 product-tab-left">

                            <a data-image="/img/<%= productData.images[0] %>" data-zoom-image="/img/<%= productData.images[0] %>" class="slick-slide slick-cloned" data-slick-index="-4" aria-hidden="true" tabindex="-1">
                                <img class="blur-up lazyload" data-src="/img/<%= productData.images[0] %>" src="/img/<%= productData.images[0] %>" alt=""  />
                             </a>
                             <a data-image="/img/<%= productData.images[1] %>" data-zoom-image="/img/<%= productData.images[1] %>" class="slick-slide slick-cloned" data-slick-index="-4" aria-hidden="true" tabindex="-1">
                                <img class="blur-up lazyload" data-src="/img/<%= productData.images[1] %>" src="/img/<%= productData.images[1] %>" alt="" />
                             </a>
                             <a data-image="/img/<%= productData.images[2] %>" data-zoom-image="/img/<%= productData.images[2] %>" class="slick-slide slick-cloned" data-slick-index="-4" aria-hidden="true" tabindex="-1">
                                <img class="blur-up lazyload" data-src="/img/<%= productData.images[2] %>" src="/img/<%= productData.images[2] %>" alt="" />
                             </a>
                             <a data-image="/img/<%= productData.images[3] %>" data-zoom-image="/img/<%= productData.images[3] %>" class="slick-slide slick-cloned" data-slick-index="-4" aria-hidden="true" tabindex="-1">
                                <img class="blur-up lazyload" data-src="/img/<%= productData.images[3] %>" src="/img/<%= productData.images[3] %>" alt="" />
                             </a>
                        </div>
                    </div>
                    <div class="zoompro-wrap product-zoom-right pl-20">
                        <div class="zoompro-span">
                            <img class="blur-up lazyload zoompro" data-zoom-image="/img/<%= productData.images[0] %>" alt="" src="/img/<%= productData.images[0] %>" />
                        </div>
                        
                    </div>
                    <div class="lightboximages">
                        <a href="/img/<%= productData.images[0] %>" data-size="1462x2048"></a>
                        <a href="/img/<%= productData.images[1] %>" data-size="1462x2048"></a>
                        <a href="/img/<%= productData.images[2] %>" data-size="1462x2048"></a>
                        <a href="/img/<%= productData.images[3] %>" data-size="1462x2048"></a>

                    </div>

                </div>
            </div>
            <div class="col-lg-6 col-md-6 col-sm-12 col-12">
                    <div class="product-single__meta">
                        <h1 class="product-single__title">Product Name:<%= productData.name %></h1>
                        <div class="product-nav clearfix">					
                            <a href="#" class="next" title="Next"><i class="fa fa-angle-right" aria-hidden="true"></i></a>
                        </div>
                        <div class="prInfoRow">
                            <div class="product-stock">
                                <% if (productData.stock <= 0) { %>
                                    <span class="outstock-msg">Out of Stock</span>
                                <% } else { %>
                                    <span class="instock">Stock <%= productData.stock %></span>
                                <% } %>
                            </div>
                        </div>
                        <p class="product-single__price product-single__price-product-template">
                            <% if (productData.offer) { %>
                                <span class="product-price__price product-price__price-product-template product-price__sale product-price__sale--single">
                                    <span class="money original-price">Offer Price: <%= Math.round((productData.price * productData.offer) / 100) %></span>

                                </span>
                                <span id="SaveAmount-product-template" class="product-single__save-amount">
                                    Price:<%= productData.price %>
                               </span>
                                <div>
                                <span id="ProductPrice-product-template" class="product-price__price product-price__price-product-template product-price__sale product-price__sale--single">
                                    <span class="money offer-price">Product Offer:<%= productData.offer %>%</span>
                                </span>
                            </div>
                                <div>
                                <span id="SaveAmount-product-template" class="product-single__save-amount">
                                     You save: <%= productData.price - productData.price %>
                                </span>
                            </div>
                            <% } else { %>
                                <span class="product-price__price product-price__price-product-template product-price__sale product-price__sale--single">
                                    <span id="ProductPrice-product-template"><span class="money"><%= productData.price %></span></span>
                                </span>
                            <% } %>
                        </p>
                        
                    <div class="product-single__description rte">
                        <ul>
                            <li><%= productData.description %></li>
                            
                        </ul>
                    </div>
                    <form method="post" action="http://annimexweb.com/cart/add" id="product_form_10508262282" accept-charset="UTF-8" class="product-form product-form-product-template hidedropdown" enctype="multipart/form-data">
                        <div class="swatch clearfix swatch-0 option1" data-option-index="0">
                            <div class="product-form__item">
                            </div>
                        </div>
                        <div class="swatch clearfix swatch-1 option2" data-option-index="1">
                        </div>
                        <!-- Product Action -->
                        <div class="product-action clearfix">
                            <div class="product-form__item--quantity">
                            </div>                                
                            <div class="product-form__item--submit">
                                <form class="variants add" action="#" onclick="window.location.href='cart.html'"method="post">
                                    <a href="/addtoCart/<%= productData._id %>"><button class="btn btn-addto-cart" type="button" tabindex="0">Add To Cart</button></a> 
                                </form>
                                <div style="margin-top: 10px;" class="shopify-payment-button" data-shopify="payment-button">
                                    <button type="button" class="shopify-payment-button__button shopify-payment-button__button--unbranded"> <i class="icon anm anm-heart-l" aria-hidden="true"></i>ADD TO WISHLIST</button>
                                </div>
                            </div>
                        </div>
                        <!-- End Product Action -->
                    </form>
                    <div class="display-table shareRow">
                            <div class="display-table-cell medium-up--one-third">
                            </div>
                            <div class="display-table-cell text-right">
                                
                            </div>
                        </div>
                    </div>
                </div>
        </div>
    </div>
    <!--End-product-single-->
    <!--Product Fearure-->
    
    <!--End Product Fearure-->
    </div>

<%-include('footer')-%>